
@using (Html.BeginForm("AddWriter", "StorySettings", new { id = Model }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Add Writer by username</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">

            @Html.TextBox("model", "", htmlAttributes: new { @class = "form-control", required = "required", placeholder = "Enter Writer Username Here" })

        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add writer" class="btn btn-default" />
            </div>
        </div>
    </div>
}

