@model StoryTime.Web.ViewModels.Stories.StoryViewModel

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title"> @Html.ActionLink(Model.Title, "Details", "Stories", new { area = string.Empty, id = Model.Id }, new { })</h3>
    </div>
    <div class="panel-body">
        <blockquote>
            @Html.DisplayFor(m => Model.Sentences)
            <small>Narrated by <cite title="@Model.Creator">@Model.Creator</cite></small>
        </blockquote>
    </div>
</div>
