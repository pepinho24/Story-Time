@model StoryTime.Data.Models.Story
@{
    ViewBag.Title = "Story Details";
}

<h2>@Model.Title</h2>
<h3>by @(string.Join(", ", Model.Writers.Select(wde=>wde.Name)))</h3>
<div class="row jumbotron">
    @foreach (var sentence in Model.Sentences)
    {
        <div class="row">
            @sentence.Content
        </div>
    }
</div>

@if (this.User.Identity.IsAuthenticated)
{
    @Html.Partial("_AddSentencePartial", Model.Id)
}




